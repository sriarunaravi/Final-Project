package Project;
import java.time.Duration;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.Select;
import org.openqa.selenium.support.ui.WebDriverWait;

public class FinalProject {
     public static void main(String[] args) {
	     
	        WebDriver driver = new ChromeDriver();
	        driver.manage().window().maximize();
	        WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(5));
	        driver.get("https://parabank.parasoft.com/parabank/register.htm");
	//REGISTER      
	       WebElement firstname= driver.findElement(By.name("customer.firstName"));
	       firstname.sendKeys("ABC");
	       WebElement lastname =driver.findElement(By.name("customer.lastName"));
	       lastname.sendKeys("Doe");
	       WebElement address=driver.findElement(By.name("customer.address.street"));
	       address.sendKeys("123 main street");
	       WebElement city=driver.findElement(By.name("customer.address.city"));
	       city.sendKeys("New York");
	       WebElement State=driver.findElement(By.name("customer.address.state"));
	       State.sendKeys("NY");
	       WebElement Zipcode=driver.findElement(By.name("customer.address.zipCode"));
	       Zipcode.sendKeys("10001");
	       WebElement Phone=driver.findElement(By.name("customer.phoneNumber"));
	       Phone.sendKeys("1234567890");
	       WebElement ssn=driver.findElement(By.name("customer.ssn"));
	       ssn.sendKeys("123-45-6789");
	       WebElement username=driver.findElement(By.name("customer.username"));
	       username.sendKeys("arunaa");
	       WebElement password=driver.findElement(By.name("customer.password"));
	       password.sendKeys("987654");
	       WebElement confirmpassword= driver.findElement(By.name("repeatedPassword"));
	       confirmpassword.sendKeys("987654");
	       WebElement register=driver.findElement(By.xpath("//input[@value='Register']"));
          register.click();
	       
        //LOGIN  
          
          WebElement username1=driver.findElement(By.name("username"));
	      username1.sendKeys("arunaa");
	      WebElement password1=driver.findElement(By.name("username"));
	      password1.sendKeys("987654");
	      WebElement Login=driver.findElement(By.xpath("//input[@value='Log In']"));
	      Login.click();

	    //OPEN NEW ACCOUNT   
	        WebElement OpenNewAccount= wait.until(ExpectedConditions.elementToBeClickable(By.xpath("/html/body/div[1]/div[3]/div[1]/ul/li[1]/a")));
	        OpenNewAccount.click();
	        WebElement accountTypeDropdown = wait.until(ExpectedConditions.visibilityOfElementLocated(By.id("type")));
	        Select accountType = new Select(accountTypeDropdown);
	        accountType.selectByVisibleText("CHECKING");
	        WebElement fromAccountDropdown = driver.findElement(By.id("fromAccountId"));
	        Select fromAccount = new Select(fromAccountDropdown);
	        fromAccount.selectByIndex(0);
	        WebElement OpenNewAccount1= wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//input[@value='Open New Account']")));
	        OpenNewAccount1.click();
	       
	    //NEWACCOUNT ID    
	        
	        WebElement newAccountId = wait.until(ExpectedConditions.elementToBeClickable(By.id("newAccountId")));
	        newAccountId.click();
	        Select month = new Select(driver.findElement(By.id("month")));
	        month.selectByVisibleText("March");
	        Select transactionType = new Select(driver.findElement(By.id("transactionType")));
	        transactionType.selectByVisibleText("Credit");
	        driver.findElement(By.cssSelector("input[value='Go']")).click();
	        
	   //LOGOUT     
	        wait.until(ExpectedConditions.elementToBeClickable(By.cssSelector("a[href='logout.htm']"))).click();

	        driver.quit();
	    }
	}
